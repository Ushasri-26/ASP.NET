@model IEnumerable<Assignment_2.Models.Contact>

@{
    int i = 1;
}

<h2>Contact List</h2>

<p>@Html.ActionLink("Create New Contact", "Create")</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>S.No</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        i++;
    }
</table>
